@font-face
  font-family 'Muli'
  src url('{% asset_path fonts/muli/light.eot %}');
  src url('{% asset_path fonts/muli/light.eot %}?#iefix') format('embedded-opentype')
    , embedurl('muli/light.woff') format('woff')
    , embedurl('muli/light.ttf') format('truetype')
    , embedurl('muli/light.svg') format('svg')
  font-weight 300
  font-style normal

