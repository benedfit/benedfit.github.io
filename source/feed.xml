<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.title }}</title>
		<description>{{ site.description }}</description>
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
			{% for post in site.posts %}
			<item>
				<title>{{ post.title }}</title>
				<description>{% if post.content contains site.excerpt_separator %}{{ post.content | split:site.excerpt_separator | first | xml_escape }}{% else %}{{ post.content | xml_escape }}{% endif %}</description>
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{{ site.url }}{{ post.url }}</link>
				<comments>{{ site.url }}{{ post.url }}#comments</comments>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
			</item>
			{% endfor %}
	</channel>
</rss>