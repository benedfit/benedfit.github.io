- var year = time.format('YYYY')
.footer(role='contentinfo')
  span &copy; #{year}
  | 
  span #{authorName}
  | 

  each page in pages
    if page.inmenu
      a(href=page.url)= page.title
      | 

  a(href='mailto:' + authorEmail, rel='me')= authorEmail
  | 
  a(href='https://twitter.com/' + authorHandle, rel='me') Twitter
  | 
  a(href='https://github.com/' + authorHandle + '/', rel='me') GitHub
  | 
  a(href='https://codepen.io/'+ authorHandle + '/', rel='me') CodePen
