extend default

block contents
  if page.title
    h1= page.title

  - var postsYear = page.postsYear ? page.postsYear.toString() : ''
  - var postsMonth = page.postsMonth ? page.postsMonth.toString() : ''
  - var first = true
  each page in posts
    if (page.date.format('YYYY') === postsYear || postsYear === '') && (page.date.format('M') === postsMonth || postsMonth === '')
      if !first
        hr
      include ./includes/post
      - first = false
