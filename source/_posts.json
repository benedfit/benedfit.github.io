---
---
{"posts":[
  {% for post in site.posts %}
    {% if forloop.index > 1 %},{% endif %}
    {
      "id":"{{ post.url }}",
      "title":"{{ post.title }}",
      "published":"{{ post.date | date_to_xmlschema }}",
      "day":"{{ post.date | date: '%-d' }}",
      "month":"{{ post.date | date: '%m' }}",
      "monthname":"{{ post.date | date: '%B' }}",
      "year":"{{ post.date | date: '%Y' }}",
      "excerpt":"{{ post.excerpt | strip_newlines | remove:'"' }}",
      "content":"{{ post.content | strip_html | strip_newlines | remove:'"' | remove:'  ' }}"
    }
  {% endfor %}
]}